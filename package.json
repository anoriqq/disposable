{
  "name": "disposable",
  "license": "MIT",
  "author": "anoriqq <shota.yoshikawa@anoriqq.com>",
  "repository": "git@github.com:anoriqq/disposable.git",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "next build && tsc --project ./server/tsconfig.json",
    "dev": "nodemon",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "type-check": "tsc --noEmit --pretty"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "cross-env": "7.0.2",
    "express": "4.17.1",
    "next": "9.3.6",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@types/express": "4.17.6",
    "@types/node": "13.13.5",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "husky": "4.2.5",
    "lint-staged": "10.2.2",
    "nodemon": "2.0.3",
    "prettier-package-json": "2.1.3",
    "ts-node": "8.10.1",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn type-check && lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}

{
  "compilerOptions": {
    /* Basic options */
    "target": "ES2018",
    "module": "ESNext",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "importHelpers": true,
    "removeComments": true,

    /* Strict type checking */
    "strict": true
  },
  "exclude": ["**/node_modules", "dist", ".next", "out", "**/__tests__"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "__mocks__"]
}
